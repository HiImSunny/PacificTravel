@model Web_Tour.Models.HUONGDANVIEN

@{
    ViewBag.Title = "Edit TourGuide";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";

    ViewBag.group = "TourGuides";
}

@section Head {
    <link href="~/Content/admin/newtour.css" rel="stylesheet" />
}

@section NavBar {
    <div class="navbar">
        <h4>Chỉnh Sửa Hướng Dẫn Viên - @Model.ID_HDV</h4>
    </div>
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="new-tour-container">

        <div>
            <form action="/Admin/TourGuideEdit?id=@Model.ID_HDV" method="post">

                <div class="form-section">

                    <div class="row tour-info col-lg-8 mx-auto">
                        <h5 style="margin: 0">1. Thông tin cơ bản</h5>

                        <div class="row">

                            <div class="form-item col-md-6">
                                <label for="ten-hdv" class="input-label">Tên Hướng Dẫn Viên</label>
                                <input type="text" required class="input" id="ten-hdv" placeholder=" " name="ten-hdv" value="@Model.HO_TEN_HDV">
                            </div>

                            <div class="form-item col-md-6">
                                <label for="sdt-hdv" class="input-label">SĐT Hướng Dẫn Viên</label>
                                <input type="text" required class="input" id="sdt-hdv" placeholder=" " name="sdt-hdv" value="@Model.SDT_HDV">
                            </div>

                            <div class="form-item col-md-6">
                                <label for="email-hdv" class="input-label">Email Hướng Dẫn Viên</label>
                                <input type="text" required class="input" id="email-hdv" placeholder=" " name="email-hdv" value="@Model.EMAIL_HDV">
                            </div>

                            <div class="form-item col-md-6">
                                <label for="address-hdv" class="input-label">Địa Chỉ Hướng Dẫn Viên</label>
                                <input type="text" required class="input" id="address-hdv" placeholder=" " name="address-hdv" value="@Model.DIA_CHI_HDV">
                            </div>

                        </div>
                    </div>

                </div>

                <div class="button-wrapper">
                    <a class="back-to-tours" href="/Admin/Tours">Trở Về</a>
                    <button class="create-tour-button" type="submit">Lưu Thông Tin</button>
                </div>

            </form>
        </div>

    </div>
</div>

<script>
    document.getElementById('gia-nguoi-lon').addEventListener('input', function () {
        var giaNguoiLon = parseFloat(this.value);
        if (!isNaN(giaNguoiLon)) {
            document.getElementById('gia-tre-em').value = (giaNguoiLon / 2).toFixed(0); // Làm tròn số
        } else {
            document.getElementById('gia-tre-em').value = ''; // Xóa giá trị nếu không hợp lệ
        }
    });
</script>