@{
    ViewBag.Title = "NewTour";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";

    ViewBag.group = "Tours";
    ViewBag.active = "TourTypes";
}

@section Head {
    <link href="~/Content/admin/newtour.css" rel="stylesheet" />
}

@section NavBar {
    <div class="navbar">
        <h4>Tạo Loại Tour</h4>
    </div>
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="new-tour-container">

        <form action="/Admin/NewTourStatus" method="post">

            <div class="form-section tour-info">

                <div class="form-item">
                    <div class="form-item-input" data-validate="Nhập tên trạng thái" style=" display: flex; flex-direction: column; align-items: center;">
                        <label for="tour-status-name" class="input-label">Tên trạng thái <span style="color: red">(*)</span></label>
                        <input type="text" required class="input" id="tour-status-name" placeholder="Nhập tên trạng thái" name="tour-status-name">
                    </div>
                </div>

            </div>

            <div class="button-wrapper">
                <button class="create-tour-button" type="submit">Tạo Mới</button>
            </div>

        </form>

    </div>
</div>