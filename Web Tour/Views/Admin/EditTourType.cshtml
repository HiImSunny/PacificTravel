@model Web_Tour.Models.LOAI_TOUR

@{
    ViewBag.Title = "Edit Tour Type";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";

    ViewBag.group = "Tours";
    ViewBag.active = "TourTypes";
}

@section Head {
    <link href="~/Content/admin/newtour.css" rel="stylesheet" />
}

@section NavBar {
    <div class="navbar">
        <h4>Sửa Loại Tour</h4>
    </div>
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="new-tour-container">

        <form action="/Admin/EditTourType" method="post">

            <div class="form-section tour-info">

                @Html.HiddenFor(model => model.ID_LOAI)

                <div class="form-item">
                    <div class="form-item-input" data-validate="Hãy nhập tên loại tour" style=" display: flex; flex-direction: column; align-items: center;">
                        <label for="tour-type-name" class="input-label">Tên loại tour <span style="color: red">(*)</span></label>
                        @Html.EditorFor(model => model.TEN_LOAI)
                    </div>
                </div>

            </div>

            <div class="button-wrapper">
                <button class="create-tour-button" type="submit">Xác nhận chỉnh sửa</button>
            </div>

        </form>

    </div>
</div>