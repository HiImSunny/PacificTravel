<!doctype html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />

    <title>Admin - PacificTravel</title>

    <meta name="description" content="" />

    <link rel="icon" type="image/x-icon" href="~/Images/favicon.ico" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
          rel="stylesheet" />

    <link rel="stylesheet" href="~/Content/assets/vendor/fonts/boxicons.css" />

    <link rel="stylesheet" href="~/Content/assets/vendor/css/core.css" class="template-customizer-core-css" />
    <link rel="stylesheet" href="~/Content/assets/vendor/css/theme-default.css" class="template-customizer-theme-css" />
    <link rel="stylesheet" href="~/Content/assets/css/demo.css" />

    <link rel="stylesheet" href="~/Content/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />

    <link rel="stylesheet" href="~/Content/assets/vendor/css/pages/page-auth.css" />

    <script src="~/Content/assets/vendor/js/helpers.js"></script>

    <script src="~/Content/assets/js/config.js"></script>

    <style>

        .form-control:focus {
            border-color: #ff6a00 !important;
        }
    </style>
</head>

<body>
    <!-- Content -->

    <div class="container-xxl">
        <div class="authentication-wrapper authentication-basic container-p-y">
            <div class="authentication-inner">
                <!-- Register -->
                <div class="card px-sm-6 px-0">
                    <div class="card-body">
                        <!-- Logo -->
                        <div class="app-brand justify-content-center gap-2">
                            <img src="~/Images/Logo.png" alt="PacificTravel Logo" />

                            <span style="color: red; font-weight: bold; font-size: 26px">ADMIN</span>
                        </div>

                        <p style="color:red">@ViewBag.Error</p>

                        <form id="formAuthentication" class="mb-6" action="/Admin/Login" method="post">

                            <div class="mb-6">
                                <label for="email" class="form-label">Email</label>
                                <input type="email"
                                       class="form-control"
                                       id="email"
                                       name="login-email"
                                       placeholder="Nhập email của bạn"
                                       autofocus />
                            </div>

                            <div class="mb-6 form-password-toggle">
                                <label class="form-label" for="password">Mật Khẩu</label>
                                <div class="input-group input-group-merge">
                                    <input type="password"
                                           id="password"
                                           class="form-control"
                                           name="login-pass"
                                           placeholder="Nhập mật khẩu của bạn"
                                           aria-describedby="password" />
                                    <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                                </div>
                            </div>

                            <div class="mb-8">
                                <div class="d-flex justify-content-between mt-8">
                                    <div class="form-check mb-0 ms-2">
                                        <input class="form-check-input" type="checkbox" id="remember-me" />
                                        <label class="form-check-label" for="remember-me"> Nhớ mật khẩu </label>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-6">
                                <button class="btn btn-primary d-grid w-100"  style="background-color: #ff6a00" type="submit">Đăng Nhập</button>
                            </div>

                        </form>
                    </div>
                </div>
                <!-- /Register -->
            </div>
        </div>
    </div>


    <script src="~/Content/assets/vendor/libs/jquery/jquery.js"></script>
    <script src="~/Content/assets/vendor/libs/popper/popper.js"></script>
    <script src="~/Content/assets/vendor/js/bootstrap.js"></script>
    <script src="~/Content/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/Content/assets/vendor/js/menu.js"></script>

    <script src="~/Content/assets/js/main.js"></script>

    <script async defer src="https://buttons.github.io/buttons.js"></script>
</body>
</html>
