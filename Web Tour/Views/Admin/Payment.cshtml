@model Web_Tour.Models.DAT_TOUR

@{
    ViewBag.Title = "Payment Modify";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";

    ViewBag.active = "TourBoughtList";
}

@section NavBar {
    <div class="navbar">
        <h4 style="margin: 0">Thanh Toán - @Model.ID_DAT_TOUR</h4>
    </div>
}

<div class="container-xxl flex-grow-1 container-p-y">
    <form class="payment-container" method="post" action="/Admin/Payment" >

        <input type="hidden" name="id" value="@Model.ID_DAT_TOUR" />

        <div class="row" style="text-align: center;">
            <label for="payment-amount">
                <span style="font-size: 20px;">Số tiền thanh toán</span> <br>
                <input type="number" name="paymentAmount" id="payment-amount" value="0" min="0" style="width: 200px; height: 50px" />
            </label>

        </div>

        <div class="button-wrapper" style="display: flex; justify-content: space-evenly; margin-top: 20px">
            <a href="/Admin/TourBoughtList" class="back-to-tours">Trở Về</a>
            <button class="payment-successful">Thanh Toán</button>
        </div>
    </form>
</div>

<style>
    .payment-container {
        border-radius: 0.375rem;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        background-color: white;
    }

    .button-wrapper {
        display: flex;
        justify-content: space-evenly;
    }

    .back-to-tours {
        text-align: center;
        display: block;
        width: 200px;
        margin-top: 50px;
        padding: 20px;
        background-color: #a1a1a1;
        font-size: 20px;
        font-weight: bold;
        color: white;
    }

        .back-to-tours:hover {
            color: white;
        }

    .payment-successful {
        display: block;
        width: 200px;
        margin-top: 50px;
        padding: 20px;
        background-color: #ff6a00;
        font-size: 20px;
        font-weight: bold;
        color: white;
        border: 0;
    }
</style>
