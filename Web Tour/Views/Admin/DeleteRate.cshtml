@model Web_Tour.Models.DANH_GIA

@{
    ViewBag.Title = "DeleteRate";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

@section Head {
    <link rel="stylesheet" href="~/Content/tour/booking.css">
}

@section NavBar {
    <div class="navbar">
        <h4 style="margin: 0">Xóa Đánh Giá</h4>
    </div>
}

<div class="container-xxl flex-grow-1 container-p-y">

    <div class="rate-container">

        @for (int i = 1; i <= Model.SO_LUONG_SAO; i++)
        {
            <strong>⭐</strong>
        }
        (@Model.SO_LUONG_SAO/5)

        <ul class="list-unstyled">
            <li>
                Mã Đánh Giá:
                <span>@Model.ID_DANH_GIA</span>
            </li>
            <li>
                Mã Tour:
                <span>@Model.ID_TOUR</span>
            </li>
            <li>
                Tên Tour:
                <span>@Model.TOUR.TEN_TOUR</span>
            </li>
            <li>
                Mã Thành Viên:
                <span>@Model.ID_THANH_VIEN</span>
            </li>
            <li>
                Tên Thành Viên:
                <span>@Model.THANH_VIEN.TEN_THANH_VIEN</span>
            </li>

        </ul>

        <span>Nội Dung Đánh Giá:</span>
        <span>@Html.Raw(Model.NOI_DUNG_DANH_GIA)</span>

        <div style="margin-top: 50px; text-align: -webkit-center;">
            <a class="delete-rate" href="@Url.Content("/Admin/ConfirmDeleteRate?id=" + Model.ID_DANH_GIA)">Xác Nhận Xóa Tour</a>



        </div>


    </div>
    
    <div style="text-align: -webkit-center;">
        <a href="/Admin/RateList" class="text-center back-to-tours">
            Trở Về
        </a>
    </div>

</div>

<style>

    .rate-container {
        border-radius: 0.375rem;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        background-color: white;
    }

    .back-to-tours {
        display: block;
        width: 200px;
        padding: 20px;
        background-color: #a1a1a1;
        font-size: 16px;
        font-weight: bold;
        color: white;
    }

        .back-to-tours:hover {
            color: #a1a1a1;
            background-color: white;
        }

    li span {
        font-weight: 600;
    }

    .delete-rate {
        display: block;
        background-color: #ff6a00;
        font-weight: bold;
        border: 0;
        width: 300px;
        border-radius: 3px;
        color: white;
        align-content: center;
        text-align: center;
        margin: 20px 0;
        border: 3px solid #ff6a00;
        padding: 20px;
    }

    .delete-rate:hover {
        background-color: white;
        color: #ff6a00;
    }
</style>


