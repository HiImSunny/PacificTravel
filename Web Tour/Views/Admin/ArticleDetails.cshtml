@model Web_Tour.Models.BAI_VIET

@{
    ViewBag.Title = "ArticleDetails";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

@section Head {
    <link rel="stylesheet" href="~/Content/tour/booking.css">
}

@section NavBar {
    <div class="navbar">
        <h4 style="margin: 0">Chi Tiết Bài Viết - @Model.ID_BAI_VIET</h4>
    </div>
}

<div class="container-xxl flex-grow-1 container-p-y">

    <div class="article-container">

        <div class="row">
            <div class="col-6">
                <img src="@Url.Content("~/Images/articles/" + Model.ANH_BIA_BAI_VIET)" width="100%" />
            </div>
            <div class="col-6">
                <p>MÃ BÀI VIẾT: <span>@Model.ID_BAI_VIET</span></p>
                <p>THỜI GIAN TẠO: <span>@Model.THOI_GIAN_TAO</span></p>
                <p>TIÊU ĐỀ: <span>@Model.TIEU_DE</span></p>
                <p>ID ADMIN: <span>@Model.ID_ADMIN</span></p>
                <p>TÊN ADMIN: <span>@Model.ADMIN.THANH_VIEN.TEN_THANH_VIEN</span></p>
            </div>
        </div>

        <div class="row" style="margin-top: 20px">
            <span style="text-align: center; font-size: 20px; padding: 20px">NỘI DUNG</span>
            @Html.Raw(Model.NOI_DUNG)
        </div>

    </div>

</div>

<style>

    .article-container {
        background-color: white;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .back-to-tours {
        display: block;
        width: 200px;
        padding: 20px;
        background-color: #a1a1a1;
        font-size: 16px;
        font-weight: bold;
        color: white;
    }

        .back-to-tours:hover {
            color: #a1a1a1;
            background-color: white;
        }
</style>


