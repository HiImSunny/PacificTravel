

@{
    ViewBag.Title = "CashPayment";
    Layout = "~/Views/Shared/LayoutUser.cshtml";

    ViewBag.topBannerUrl = "/Images/tour-booking-banner.jpg";
}

@section Head {
    <link rel="stylesheet" href="~/Content/tour/booking.css">
    <link rel="stylesheet" href="~/Content/tour/details.css">

}

<style>
    .slider-text {
        text-align: center;
    }

    .top-banner-content {
        width: 100%;
    }

    .button {
        border: 2px solid #ff6a00;
        padding: 10px;
        margin-top: 50px;
        background-color: #ff6a00;
        color: white;
        font-weight: bold;
        border-radius: 10px;
    }

        .button:hover {
            background-color: white;
            color: #ff6a00;
        }

    .content {
        background-color: white;
        padding: 30px;
        border-radius: 10px;
    }

    .top-banner-content {
        position: relative;
        top: 90px;
    }
</style>

@section OverlayGradientOnBanner {
    <div class="overlay dark-side-image"></div>
}

@section TopBannerContent {
    <div class="container" style="display: flex; justify-content: center;">
        <div class="slider-text d-md-flex align-items-center" data-scrollax-parent="true">
            <div class="top-banner-content" style="display: flex; flex-direction: column; align-items: center; ">
                <div class="container">
                    <div class="row progress-wizard" style="display: flex; border-bottom: 0; justify-content: center;">
                        <div class="col-sm-3 col-xs-12 progress-wizard-step  complete">
                            <div class="progress">
                                <div class="progress-bar"></div>
                            </div>
                            <a href="javascript:void(0)" class="progress-wizard-dot">
                                <span style="font-size: 20px">1</span>. Chọn dịch vụ
                            </a>
                        </div>
                        <div class="col-sm-3 col-xs-12 progress-wizard-step  complete">
                            <div class="progress">
                                <div class="progress-bar"></div>
                            </div>
                            <a href="javascript:void(0)" class="progress-wizard-dot">
                                <span style="font-size: 20px">2</span>. Thanh toán
                            </a>
                        </div>
                        <div class="col-sm-3 col-xs-12 progress-wizard-step active ">
                            <div class="progress">
                                <div class="progress-bar"></div>
                            </div>
                            <a href="javascript:void(0)" class="progress-wizard-dot">
                                <span style="font-size: 20px">3</span>. Xác nhận
                            </a>
                        </div>
                    </div>
                </div>

                <div class="content" id="Cash">
                    <h2>VĂN PHÒNG LỮ HÀNH Pacifictravel</h2>

                    <div class="content">
                        <strong>Địa chỉ:</strong> 168, Nguyễn Văn Cừ nối dài, P. An Bình, Q. Ninh Kiều, Tp. Cần Thơ<br>
                        <strong>Điện thoại:</strong> 02923798668<br>
                        <strong>Email:</strong>&nbsp;<a href="mailto:info@Pacifictravel.com">info@Pacifictravel.com</a><br>
                        <strong>Website:</strong> http://www.Pacifictravel.com
                    </div>

                    <div class="content">Quý khách vui lòng đến văn phòng của Pacifictravel để thanh toán và nhận vé.</div>
                </div>

                <a href="/Tour/BookingComplete?id=@ViewBag.id" class="button">Nhấn vào để hoàn thành đặt tour</a>
            </div>
        </div>
    </div>
}



